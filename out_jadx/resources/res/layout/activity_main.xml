<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Лицензия: нет"/>
        <EditText
            android:id="@+id/edtToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите токен"
            android:inputType="text"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnActivate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Активировать"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnHeartbeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Проверить (HB)"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <View
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnPickRef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Фото с камеры (эталон)"/>
        <TextView
            android:id="@+id/txtRef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Эталон камеры: не задан"/>
        <View
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Выбрать фото из галереи (подмена)"/>
        <ImageView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="preview"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Фото не выбрано"/>
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Старт подмены"/>
        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Стоп"/>
    </LinearLayout>
</ScrollView>
